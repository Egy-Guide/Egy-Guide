@using Microsoft.AspNetCore.Identity
@using EgyGuide.Utility
@inject UserManager<IdentityUser> UserManager

<div class="col-xs-12 col-sm-4 col-md-3 mt-20">

    <aside class="sidebar-wrapper pr-5 pr-0-xs">

        <div class="common-menu-wrapper">

            <ul class="common-menu-list">

                @if (User.IsInRole(SD.Role_User_Tour_Guide))
                {
                    <li><a asp-area="TourGuide" asp-controller="GuideDashboard" asp-action="Index">Dashboard</a></li>
                    <li><a asp-area="TourGuide" asp-controller="GuideDashboardProfile" asp-action="Index">Edit profile</a></li>
                    <li><a asp-area="TourGuide" asp-controller="GuideDashboardProfile" asp-action="Information">Guide Information</a></li>
                    <li><a asp-area="TourGuide" asp-controller="GuideDashboardTours" asp-action="Index">My tours</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change password</a></li>
                    <li>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                }

                else
                {
                    <li><a asp-area="Tourist" asp-controller="TouristDashboard" asp-action="Index">Dashboard</a></li>
                    <li><a asp-area="Tourist" asp-controller="TouristDashboardProfile" asp-action="Index">Edit profile</a></li>
                    <li><a asp-area="Tourist" asp-controller="TouristDashboardToursReservation" asp-action="Index">My Reservations</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change password</a></li>
                    <li>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                }

            </ul>

        </div>

    </aside>

</div>