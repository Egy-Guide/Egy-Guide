@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["AddClassToBodyTag"] = "transparent-header";
    ViewData["HeaderTitle"] = "create your account for free";
}

<!-- start breadcrumb -->
<partial name="~/Views/Shared/BreadcrumbHeader.cshtml">
<!-- start breadcrumb -->

<div class="pt-30 pb-60">

    <div class="container">

        <!-- start Register Modal -->
        <div class="modal-body">

            <div class="row gap-20">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <h4 class="text-center">Use another service to register.</h4>
                    <hr />

                    <div class="col-sm-6 col-md-6">
                        <button class="btn btn-facebook btn-lg btn-block mb-5-xs">Register with Facebook</button>
                    </div>
                    <div class="col-sm-6 col-md-6">
                        <button class="btn btn-google-plus btn-lg btn-block">Register with Google+</button>
                    </div>

                    <div class="col-md-12">
                        <div class="login-modal-or">
                            <div><span>or</span></div>
                        </div>
                    </div>

                    <form autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>First Name</label>
                                <input asp-for="Input.FirstName" class="form-control" type="text">
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input asp-for="Input.LastName" class="form-control" type="text">
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>Country</label>
                                <input asp-for="Input.Country" class="form-control" type="text">
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>Nationality</label>
                                <input asp-for="Input.Nationality" class="form-control" type="text">
                                <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>City</label>
                                <input asp-for="Input.City" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Input.Email" class="form-control" type="email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="Input.Password" class="form-control" type="password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-12">
                            <div class="checkbox-block">
                                <input id="register_accept_checkbox" name="register_accept_checkbox" class="checkbox" value="First Choice" type="checkbox">
                                <label class="" for="register_accept_checkbox">By register, I read &amp; accept <a href="#">the terms</a></label>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-12">
                            <div class="login-box-box-action">
                                Already have account? <a data-toggle="modal" asp-area="Identity" asp-page="Login">Log-in</a>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                    </form>
                </div>                
            </div>

        </div>        
        <!-- end Register Modal -->

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
