@model EgyGuide.Models.Category

@{
    ViewData["Title"] = "CategoryCreate";
    ViewData["AddClassToBodyTag"] = "transparent-header";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add";

    if (Model.Id != 0)
        title = "Edit";
}

<!-- start breadcrumb -->
<div class="breadcrumb-image-bg pb-100 no-bg" style="background-image:url('images/breadcrumb-bg.jpg');">
    <div class="container">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                    <h2>@title Category</h2>
                </div>
            </div>
        </div>

        <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Category @title</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- end breadcrumb -->

<div class="bg-light">

    <div class="create-tour-wrapper">

        <div class="container">

            <div class="row">

                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                    <form method="post" class="form">
                        <input type="hidden" asp-for="Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="create-tour-inner">                            

                            <h4 class="section-title">@title Category</h4>

                            <div class="row">                            

                                <div class="col-xs-12 col-sm-12">

                                    <div class="form-group form-group-lg">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" type="text" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>

                                </div>

                            </div>

                        </div>

                        <div class="mb-50">
                            <button type="submit" class="btn btn-primary btn-wide">Submit</button>
                            <a href="#" class="btn btn-primary btn-wide btn-border">Save as draft</a>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>

@section Scripts{ 
<script src="js/jquery.bootstrap-touchspin.js"></script>
<script src="js/dropzone.min.js"></script>
<script src="js/jquery-ui.min.js"></script>
<script src="js/jquery.ui.timepicker.js"></script>
<script src="js/bootstrap-tokenfield.js"></script>
<script src="js/typeahead.bundle.min.js"></script>
<script src="js/customs-create.js"></script>

<partial name="_ValidationScriptsPartial" />
}

