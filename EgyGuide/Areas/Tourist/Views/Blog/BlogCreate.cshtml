@model EgyGuide.Models.ViewModels.BlogVM

@{
    ViewData["Title"] = "BlogCreate";
    ViewData["AddClassToBodyTag"] = "transparent-header";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add";
    
}

<!-- start breadcrumb -->
<div class="breadcrumb-image-bg pb-100 no-bg" style="background-image:url('images/breadcrumb-bg.jpg');">
    <div class="container">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                    <h2>@title Your Blog</h2>
                    <p>Publish your passions, your way</p>
                </div>
            </div>
        </div>

        <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Blog @title</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- end breadcrumb -->

<div class="bg-light">

    <div class="create-tour-wrapper">

        <div class="container">

            <div class="row">

                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                    <form method="post" enctype="multipart/form-data" class="form">
                        <input type="hidden" asp-for="Blog.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="create-tour-inner">

                            <div class="promo-box-02 mb-40">

                                <div class="icon">
                                    <i class="ti-plus"></i>
                                </div>

                                <h4>No account? Please sign-up now. It's free. </h4>

                                <a href="#" class="btn">Sign Up</a>

                            </div>

                            <h4 class="section-title">New Blog</h4>

                            <div class="row">

                                <div class="col-xs-12 col-sm-12">

                                    <div class="form-group form-group-lg">
                                        <label>UserId:</label>
                                        <input asp-for="Blog.UserId" type="text" class="form-control" />
                                        <span asp-validation-for="Blog.UserId" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-group-lg">
                                        <label>Title:</label>
                                        <input asp-for="Blog.Title" type="text" class="form-control" />
                                        <span asp-validation-for="Blog.Title" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <label>Description:</label>
                                        <textarea asp-for="Blog.Descripition" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Blog.Descripition" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-xs-6 col-sm-6">

                                    <div class="form-group">
                                        <label>Category:</label>
                                        <select asp-for="Blog.CategoryId" asp-items="@Model.CategoryList" class="selectpicker show-tick form-control"></select>
                                    </div>

                                </div>

                            </div>

                            <div class="mb-10"></div>

                            <h4 class="section-title">Add Image</h4>

                            @*<div class="submite-list-box">

                                <div id="file-submit" class="dropzone">
                                    <input name="files" type="file" multiple>
                                    <div class="dz-default dz-message"><span>Click or Drop Images Here</span></div>
                                </div>

                            </div>*@

                            <div>

                                <input name="files" type="file" multiple>



                            </div>

                        </div>

                        <div class="mb-50">
                            <button type="submit" class="btn btn-primary btn-wide">Submit</button>
                            <a href="#" class="btn btn-primary btn-wide btn-border">Save as draft</a>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>

@section Scripts{ 
<script src="js/jquery.bootstrap-touchspin.js"></script>
<script src="js/dropzone.min.js"></script>
<script src="js/jquery-ui.min.js"></script>
<script src="js/jquery.ui.timepicker.js"></script>
<script src="js/bootstrap-tokenfield.js"></script>
<script src="js/typeahead.bundle.min.js"></script>
<script src="js/customs-create.js"></script>

<partial name="_ValidationScriptsPartial" />

<script src="https://cdn.tiny.cloud/1/i54fe6u5lagl1he8pqydwfq525q0iiqncl244x4bzlp7acjm/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'lists',
        manubar: 'file edit format'
    });

</script>

}
