@model EgyGuide.Models.ViewModels.BlogVM
@using EgyGuide.Utility

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Categories";
}

<!-- start breadcrumb -->
<partial name="~/Views/Shared/Breadcrumb.cshtml">
    <!-- end breadcrumb -->

    <div class="pt-50 pb-50">

        <div class="container">

            <div class="row">

                <div class="col-xs-12 col-sm-8 col-sm-9">

                    <div class="blog-wrapper">

                        <!-- start Blog Item -->
                        <partial name="BlogItems">
                        <!-- end Blog Item -->

                        <!-- Pagination -->
                        <partial name="~/Views/Shared/Pagination.cshtml">
                        <!-- End Pagination -->

                    </div>

                </div>

                <div class="col-xs-12 col-sm-4 col-md-3 mt-50-xs">

                    <aside class="sidebar-wrapper">

                        <div class="sidebar-module">
                            <div class="sidebar-module-inner">
                                <div class="sidebar-mini-search">
                                    <a asp-controller="Blog" asp-action="BlogCreate" class="btn btn-primary btn-lgg btn-block btn-border">Create Blog</a>
                                </div>
                            </div>
                        </div>

                        <div class="clear"></div>

                        <div class="sidebar-module">
                            <h4 class="sidebar-title">Categories</h4>
                            <div class="sidebar-module-inner">
                                <!-- Categories -->
                                <partial name="CategorySidebar">
                            </div>
                        </div>

                        <div class="clear"></div>

                        <div class="sidebar-module">
                            <h4 class="sidebar-title">Latest Posts</h4>
                            <div class="sidebar-module-inner">
                                <!-- LatestPosts -->
                                <partial name="LatestPosts">
                            </div>
                        </div>

                        <div class="clear"></div>

                        <div class="sidebar-module">
                            <h4 class="sidebar-title">Popular Posts</h4>
                            <div class="sidebar-module-inner">
                                <!-- PopularPosts -->
                                <partial name="PopularPosts">
                            </div>
                        </div>

                        <div class="clear"></div>

                        <div class="sidebar-module">
                            <h4 class="sidebar-title">Archives</h4>
                            <div class="sidebar-module-inner">
                                <!-- Archives -->
                                <partial name="ArchiveSidebar">
                            </div>
                        </div>

                    </aside>

                </div>

            </div>

        </div>

    </div>

