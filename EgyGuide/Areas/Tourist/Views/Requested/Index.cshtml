@model IEnumerable<EgyGuide.Models.Requested>
@using EgyGuide.Utility

@{
    ViewData["Title"] = "Requested Tours";
    ViewData["HeaderTitle"] = "Requested Tours Results";
    ViewData["AddClassToBodyTag"] = "transparent-header";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start breadcrumb -->
<partial name="~/Views/Shared/BreadcrumbHeader.cshtml">
<!-- end breadcrumb -->

<div class="pt-30 pb-50">

    <div class="container">

        <div class="wanted-trip-wrapper">

            <div class="GridLex-gap-20 GridLex-gap-15-mdd GridLex-gap-10-xs">

                @if (Model.Any())
                {
                    <div class="GridLex-grid-noGutter-equalHeight ">
                        @foreach (var trip in Model.OrderByDescending(b => b.TripId))
                        {
                            <div class="GridLex-col-3_mdd-4_sm-6_xs-6_xss-12">
                                <div class="wanted-trip-item">
                                    <div class="wanted-trip-header">
                                        <h3>@trip.Title</h3>
                                        <p><i class="icon-location-pin">@trip.City.Name</i> </p>
                                    </div>

                                    <div class="wanted-trip-person clearfix">
                                        <div class="image">
                                            <img src="images/testimonial/01.jpg" class="img-circle" alt="images">
                                        </div>
                                        <p class="name">By: <a href="#">Robert Kalvin</a></p>
                                        <p>Hong Kong</p>
                                    </div>

                                    <div class="wanted-trip-bottom bg-light-primary clearfix">
                                        <div class="row gap-10">
                                            <div class="col-xs-12 col-sm-7">
                                                <div class="wanted-trip-price">
                                                    my budget
                                                    <span class="block inline-block-xs">USD @trip.Budget</span>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-sm-5">
                                                <a asp-controller="RequestedDetails" asp-action="Index" asp-route-id="@trip.TripId" class="btn btn-primary btn-block mt-10-xs">Details</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }

                    </div>
                }
                else
                {
                    <partial name="~/Views/Shared/NotFoundAlert.cshtml" />
                }
            </div>
        </div>

        <div class="pager-wrappper clearfix">

            <div class="pager-innner">

                <div class="clearfix">
                    Showing reslut 1 to 15 from 248
                </div>

                <div class="clearfix">
                    <nav class="pager-center">
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><span>...</span></li>
                            <li><a href="#">11</a></li>
                            <li><a href="#">12</a></li>
                            <li><a href="#">13</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </div>

        </div>

    </div>

</div>

@section Scripts{
    <script src="~/js/bootstrap-tokenfield.js"></script>
    <script src="~/js/typeahead.bundle.min.js"></script>
    <script src="~/js/ion.rangeSlider.min.js"></script>
    <script src="~/js/jquery.bootstrap-touchspin.js"></script>
    <script src="~/js/customs-result.js"></script>
}
