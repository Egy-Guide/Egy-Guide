@model EgyGuide.Models.ViewModels.GuideUserVM
@using EgyGuide.Utility
@{
    ViewData["Title"] = "Guide Profile - Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Shared/Breadcrumb.cshtml">
    <partial name="~/Views/Shared/TourGuide/UserProfileWrapper.cshtml">

        <div class="pt-30 pb-50">

            <div class="container">

                <div class="row">

                    <div class="col-xs-12 col-sm-7 col-md-8 mt-20">
                        <h4 class="section-title">Tour:</h4>
                        @if (Model.Trips.ToList().Count() != 0)
                        {
                            <div class="trip-guide-wrapper">

                                <div class="GridLex-gap-20 GridLex-gap-20-xs">

                                    <div class="GridLex-grid-noGutter-equalHeight">
                                        @foreach (var trip in Model.Trips)
                                        {
                                            <div class="GridLex-col-6_sm-12_xs-6_xss-12">

                                                <div class="trip-guide-item no-person">

                                                    <div class="trip-guide-image">
                                                        <img src="@trip.CoverImageUrl" alt="images" />
                                                    </div>
                                                    @{ var description = @trip.Description;
                                                        var minimizeDescription = SD.SubstringByWords(SD.StripHtml(description), 20);
                                                    }
                                                    <div class="trip-guide-content">
                                                        <h3>@trip.Title</h3>
                                                        <p>@SD.StripHtml(minimizeDescription)...</p>
                                                    </div>

                                                    <div class="trip-guide-bottom bg-light-primary bt">

                                                        <div class="trip-guide-meta row gap-10">
                                                            <div class="col-xs-6 col-sm-6">
                                                                <div class="rating-item">
                                                                    <input type="hidden" class="rating" data-filled="fa fa-star rating-rated" data-empty="fa fa-star-o" data-fractions="2" data-readonly value="4.5" />
                                                                </div>
                                                            </div>
                                                            <div class="col-xs-6 col-sm-6 text-right">
                                                                @trip.Days days  @trip.Nights nights
                                                            </div>
                                                        </div>

                                                        <div class="row gap-10">
                                                            <div class="col-xs-12 col-sm-6">
                                                                <div class="trip-guide-price">
                                                                    Starting at
                                                                    <span class="number">USD @trip.Price</span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xs-12 col-sm-6 text-right">
                                                                <a asp-area="Tourist" asp-controller="OfferedDetails" asp-action="Index" asp-route-id="@trip.TripId" class="btn btn-primary">Details</a>
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>

                                            </div>
                                        }


                                    </div>

                                </div>

                            </div>

                            <div class="pager-wrappper text-left clearfix">

                                <div class="pager-innner">

                                    <div class="clearfix">
                                        Showing reslut 1 to 15 from 248
                                    </div>

                                    <div class="clearfix">
                                        <nav>
                                            <ul class="pagination">
                                                <li>
                                                    <a href="#" aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                                <li class="active"><a href="#">1</a></li>
                                                <li><a href="#">2</a></li>
                                                <li><a href="#">3</a></li>
                                                <li><span>...</span></li>
                                                <li><a href="#">11</a></li>
                                                <li><a href="#">12</a></li>
                                                <li><a href="#">13</a></li>
                                                <li>
                                                    <a href="#" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>

                                </div>

                            </div>
                        }
                        else
                        {
                            <p style="color:red"><strong>This Tour Guide has no trips, yet....</strong></p>
                        }
                    </div>

                    <div id="sidebar-sticky" class="col-xs-12 col-sm-5 col-md-4 mt-20">

                        <div class="ml-10 ml-0-xs mb-10">
                            <a href="guide-booking.html" class="btn btn-primary btn-lgg btn-block btn-border">Book me Now</a>
                        </div>

                        <aside class="sidebar-wrapper with-box-shadow">

                            <div class="sidebar-booking-box">

                                <div class="sidebar-booking-header clearfix">

                                    <div class="price">
                                        Contact me
                                    </div>

                                </div>

                                <div class="sidebar-booking-inner">

                                    <form class="fast-contact-wrapper">

                                        <div class="row">

                                            <div class="col-xss-12 col-xs-6 col-sm-12 col-md-12">

                                                <div class="form-group">
                                                    <label>Your Name (required)</label>
                                                    <input type="text" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-xss-12 col-xs-6 col-sm-12 col-md-12">

                                                <div class="form-group">
                                                    <label>Your Email (required)</label>
                                                    <input type="text" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-xss-12 col-xs-12 col-sm-12 col-md-12">

                                                <div class="form-group">
                                                    <label>Message</label>
                                                    <textarea class="form-control" rows="6"></textarea>
                                                </div>

                                            </div>

                                        </div>

                                        <a href="#" class="btn btn-primary btn-block mt-5">Submit contact</a>

                                    </form>

                                </div>

                            </div>

                        </aside>

                    </div>

                </div>

            </div>

        </div>

        @section Scripts{
            <partial name="~/Views/Shared/TourGuide/UserProfileScripts.cshtml">
        }
