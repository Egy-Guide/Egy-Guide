@model EgyGuide.Models.TripDaysDetail

@{ ViewData["Title"] = "Tour";
    ViewData["AddClassToBodyTag"] = "transparent-header";
    ViewData["AddToBreadcrumbHeaderHereBox"] = "pb-100 no-bg";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create";



    var countObject = ViewData["count"];
    var count = Convert.ToInt32(countObject);
}



<!-- start breadcrumb -->

<div class="breadcrumb-image-bg pb-100 no-bg" style="background-image:url('images/breadcrumb-bg.jpg');">
    <div class="container">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                    <h2>@title Your Tour</h2>

                    <p>Publish your passions, your way</p>
                </div>
            </div>
        </div>

        <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Tour @title</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- end breadcrumb -->
<div class="bg-light">

    <div class="create-tour-wrapper">

        <div class="container">
            <div class="row">

                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                    <form id="data" class="form" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-40"></div>

                        <h4 class="section-title">Itinerary</h4>
                        <p>Compliment interested discretion estimating on stimulated apartments oh. Dear so sing when in find read of call. As distrusts behaviour abilities defective uncommonly.</p>

                        <div class="itinerary-form-wrapper">

                            @for (var i = 1; i <= count; i++)
                            {
                                <div class="itinerary-form-item">

                                    <div class="content clearfix">

                                        <div class="row gap-20">

                                            <div class="col-xss-12 col-xs-2 col-sm-2 col-md-1">

                                                <div class="day">
                                                    <h6 class="text-uppercase mb-0 mt-5 text-muted">Day</h6>
                                                    <span class="text-primary block number spacing-1">@i</span>
                                                </div>

                                            </div>

                                            <div class="col-xss-12 col-xs-10 col-sm-10 col-md-11">

                                                <div class="row gap-20">

                                                    <div class="col-xs-12 col-sm-5 col-md-3">

                                                        <div class="form-group form-group-sm">
                                                            <label>Time from</label>
                                                            <input id="from+@i" asp-for="TimeFrom" type="time" class="form-control" />
                                                        </div>

                                                    </div>

                                                    <div class="col-xs-12 col-sm-5 col-md-3">

                                                        <div class="form-group form-group-sm">
                                                            <label>Time to</label>
                                                            <input id="to+@i" asp-for="TimeTo" type="time" class="form-control" />
                                                        </div>

                                                    </div>

                                                </div>

                                                <div class="row gap-20">

                                                    <div class="col-xs-12 col-sm-6">

                                                        <div class="form-group">
                                                            <label>Title:</label>
                                                            <input id="title+@i" asp-for="Title" type="text" class="form-control" />
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Remark:</label>
                                                            <input id="remark+@i" asp-for="Remark" type="text" class="form-control" />
                                                        </div>

                                                    </div>

                                                    <div class="col-xs-12 col-sm-6">

                                                        <div class="form-group">
                                                            <label>Brief Description:</label>
                                                            <textarea id="description+@i" asp-for="Description" class="form-control" rows="5"></textarea>
                                                        </div>

                                                    </div>

                                                    @*<div class="col-xs-12 col-sm-12">

                                                        <label>Upload Photo:</label>

                                                        <div class="image-upload">
                                                            <div class="">
                                                                <input id="files+@i"name="file" type="file" class="form-control">
                                                                
                                                            </div>
                                                        </div>

                                                    </div>*@

                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>

                            }

                        </div>

                        @*<div class="add-more-form mt-15">
                                <span>Add/remove itinerary</span>
                                <a href="#"><i class="ion-android-add-circle"></i></a>
                                <a href="#"><i class="ion-android-remove-circle"></i></a>
                            </div>*@
                        <div class="mb-50">

                            <div class="checkbox-block font-icon-checkbox">
                                <input id="term_accept-1" name="term_accept" type="checkbox" class="checkbox" />
                                <label class="" for="term_accept-1">Am terminated it excellence invitation projection as. She graceful shy believed distance use nay. Lively is people so basket ladies window expect. <a href="#" class="font700">Terms &amp; Conditions</a></label>
                            </div>

                            <div class="mb-25"></div>

                            <button type="submit" onclick="saveList()" class="btn btn-primary btn-wide">Submit</button>
                            <a href="#" class="btn btn-primary btn-wide btn-border">Save as draft</a>

                        </div>
                    </form>



                </div>

            </div>

        </div>

    </div>

</div>




@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/i54fe6u5lagl1he8pqydwfq525q0iiqncl244x4bzlp7acjm/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        var saveList = function () {
            var matrix = new Array();

            for (var i = 1; i <= @count ; i++) {
                var title = document.getElementById("title+" + i).value;
                var remark = document.getElementById("remark+" + i).value;
                var timeFrom = document.getElementById("from+" + i).value;
                var timeTo = document.getElementById("to+" + i).value;
                var description = document.getElementById("description+" + i).value;

                if (title && remark && description != null) {
                    matrix.push({ Title:title, TimeFrom:timeFrom, TimeTo:timeTo, Remark:remark, Description:description });
                }

            }

            console.log(matrix);
            
            if (matrix.length != 0) {

                $.ajax({
                    url: "/TourGuide/TripDays/SaveList",
                    type: "POST",
                    data: { ItemList: matrix },
                    success: function (response) {
                        //
                    }
                })
            }
        }

        
    </script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format',
        });
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please select an image", "error");
                return false;
            }
            return true;
        }
    </script>
    <script src="js/jquery.bootstrap-touchspin.js"></script>
    <script src="js/dropzone.min.js"></script>
    <script src="js/jquery-ui.min.js"></script>
    <script src="js/jquery.ui.timepicker.js"></script>
    <script src="js/bootstrap-tokenfield.js"></script>
    <script src="js/typeahead.bundle.min.js"></script>
    <script src="js/customs-create.js"></script>
}
