@model EgyGuide.Models.TripDetail

@{
    ViewData["Title"] = "Create Tour Done";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start breadcrumb -->
<partial name="~/Views/Shared/Breadcrumb.cshtml">
    <!-- end breadcrumb -->

    <div class="pt-50 pb-50">

        <div class="container">

            <div class="create-done-wrapper">

                <div class="row">

                    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                        <div class="icon">
                            <div class="icon-inner">
                                <i class="ti-check"></i>
                            </div>
                        </div>

                        <h1 class="text-lowercase">Congratulation!</h1>
                        <p class="lead">Your tour have been successfully created</p>
                        <h3>@Model.Title</h3>
                        <a href="/offered-details?id=@Model.TripId" class="btn btn-primary btn-wide">View</a>
                        <a href="/offered-create?id=@Model.TripId" class="btn btn-primary btn-wide btn-border">Edit</a>

                    </div>

                </div>

            </div>

        </div>

    </div>
